@model JobOfferWebSite_V1._1.Models.Jobs

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Jobs</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobContent)
        </dt>

        <dd>
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.JobContent).ToString()))

            @*@Html.DisplayFor(model => model.JobContent)*@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>

        <dd>
            <img src="~/Uploads/@Html.DisplayFor(model => model.JobImage)"
                 class="thumbnail" style="height:128px;width:128px" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("تقدم", "Apply", new { id = Model.Id } ,new { @class="btn btn-success" }) |
    @Html.ActionLink("الرجوع إلى القائمة", "Index", new { @class = "btn btn-default" })
</p>
