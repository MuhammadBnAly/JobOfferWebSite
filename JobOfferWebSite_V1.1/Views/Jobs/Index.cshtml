@model IEnumerable<JobOfferWebSite_V1._1.Models.Jobs>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>قائمة الوظائف</h2>

<p>
    @Html.ActionLink("إضافة وظيفة جديدة", "Create" )
</p>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobContent)
        </td>
        <td>
            <img src="~/Uploads/@Html.DisplayFor(model => item.JobImage)"
                 class="thumbnail" style="height:48px;width:48px" />        
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.Id}) |
            @Html.ActionLink("التفاصيل", "Details", new { id=item.Id}) |
            @Html.ActionLink("حذف", "Delete", new { id=item.Id})
        </td>
    </tr>
}

</table>
